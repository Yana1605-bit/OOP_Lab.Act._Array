using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Act._04
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] names = new string[3];

            for (int i = 0; i < names.Length; i++)
            {
                Console.Write($"Enter 3 names {i + 1}: ");
                names[i] = Console.ReadLine();
            }
            Console.WriteLine("\n");

            foreach (string name in names)
            {
                if (!string.IsNullOrEmpty(name) && name.Length >= 2)
                {
                    char fChar = name[0];
                    char lChar = name[name.Length - 1];
                    char upFirst = char.ToUpper(fChar);
                    char upLast = char.ToUpper(lChar);

                    Console.WriteLine($"First character: {fChar}");
                    Console.WriteLine($"Last character: {lChar}");

                    Console.WriteLine($"First in uppercase: {upFirst}");
                    Console.WriteLine($"Last in uppercase: {upLast}");

                    Console.WriteLine();
                }
            }
        }
    }
}
