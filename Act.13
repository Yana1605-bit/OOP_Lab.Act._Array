using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Act._13
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] email = new string[5];

            for (int i = 0; i < email.Length; i++)
            {
                Console.Write($"Enter 5 email {i + 1}: ");
                email[i] = Console.ReadLine().Trim();

                string Email_entered = email[i];

                if (!string.IsNullOrWhiteSpace(Email_entered) && Email_entered.Contains("@"))
                {
                    string username = Email_entered.Split('@')[0];
                    Console.WriteLine($"Extracted username: {username}");
                }
                else if ((Email_entered.EndsWith(".com") || Email_entered.EndsWith(".edu")))
                {
                    string username = Email_entered.Split('@')[0];
                    Console.WriteLine($"Extracted username: {username}");
                }
                else
                {
                    Console.WriteLine($"Invalid and it has been flagged.");
                }
                Console.WriteLine();
            }
        }
    }
}
